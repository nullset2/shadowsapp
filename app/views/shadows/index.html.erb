<p id="notice"><%= notice %></p>

<h1>Shadows</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shadows.each do |shadow| %>
      <tr>
        <td><%= link_to 'Show', shadow %></td>
        <td><%= link_to 'Edit', edit_shadow_path(shadow) %></td>
        <td><%= link_to 'Destroy', shadow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

